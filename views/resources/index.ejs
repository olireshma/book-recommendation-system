<% layout('layouts/boilerplate')%>

<h1>All Resources</h1>
<div>
    <a href="/resources/new">Add Resource</a>
</div>
<% for (let resource of resources){%>
<div class="card" mb-3>
    <div class="row">
        <div class="col-md-4">
            <img class="img-fluid" alt="" src="<%=resource.image%>">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title"><%= resource.title %> </h5>
                <p class="card-text"><%= resource.description %></p>
                <a class="btn btn-primary" href="/resources/<%=resource._id%>">View <%=resource.title%></a>
            </div>
        </div>
    </div>
</div>
<% }%>